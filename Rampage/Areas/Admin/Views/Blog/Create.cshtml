@model BlogPostVM


<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-6">
            <form style="margin:auto" method="post" enctype="multipart/form-data" class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Blog ekle</h6>
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" id="floatingInput"
                           placeholder="Kategori adı girin">
                    <label for="floatingInput">Ad</label>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>





                <div class="form-floating mb-3">
                    <input asp-for="Description" class="form-control" id="floatingInput"
                           placeholder="Açıklama girin">
                    <label for="floatingInput">Açıklama</label>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>


                <div class="form-floating mb-3">
                    <input asp-for="Image" accept="image/*" class="form-control" id="floatingInput">
                    <label for="floatingInput">Resim</label>
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>

          

                <div class="form-floating mb-3">
                    <select class="form-select" asp-for="BlogCategoryId" id="floatingSelect"
                            aria-label="Floating label select example">
                        <option value="@null" disabled selected>Kategori seçin</option>
                        @foreach (BlogCategory category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>

                        }

                    </select>
                    <label for="floatingSelect">Kategori</label>
                    <span class="text-danger" asp-validation-for="BlogCategoryId"></span>
                </div>



                <button class="btn btn-primary">Ekle</button>
                <a asp-action="Index" class="btn btn-secondary">Geri</a>
            </form>
        </div>

    </div>
</div>
<!-- Form End -->
        </div>
<!-- Content End -->