@model BlogCategoryPutVM


<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-6">
            <form style="margin:auto" method="post" enctype="multipart/form-data" class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Kategori Değiştir</h6>
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" id="floatingInput"
                           placeholder="Kategori adı girin">
                    <label for="floatingInput">Ad</label>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>


                <button class="btn btn-warning">Değiştir</button>
                <a asp-action="Index" class="btn btn-secondary">Geri</a>
            </form>
        </div>

    </div>
</div>
<!-- Form End -->
        </div>
<!-- Content End -->