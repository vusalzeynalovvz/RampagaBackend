@model ProductInfoPostVM



<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-6">
            <form style="margin:auto" method="post" enctype="multipart/form-data" class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">İnfo ekle</h6>
                <div class="form-floating mb-3">
                    <input asp-for="Key" class="form-control" id="floatingInput"
                           placeholder=" Anahtar girin">
                    <label for="floatingInput">Info anahtarı</label>
                    <span class="text-danger" asp-validation-for="Key"></span>
                </div>


                <div class="form-floating mb-3">
                    <input asp-for="Value" class="form-control" id="floatingInput"
                           placeholder=" Değer girin">
                    <label for="floatingInput">Info değeri</label>
                    <span class="text-danger" asp-validation-for="Value"></span>
                </div>
                <input type="hidden"  asp-for="ProductId"/>
                <button class="btn btn-primary">Ekle</button>
                <a asp-action="Index" class="btn btn-secondary">Geri</a>
            </form>
        </div>

    </div>
</div>
<!-- Form End -->
        </div>
<!-- Content End -->