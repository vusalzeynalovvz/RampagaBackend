                <form asp-action="AddToBasket" asp-route-id="@Model.Id" asp-route-returnAction="@Context.Request.Path.Value" class="piece">
                    <div class="product-qty">
                        <div class="qty-minus">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="25"
                                 viewBox="0 0 9.156 16.953">
                                <path d="M8.963,8.942l-7.841,7.82a.657.657,0,0,1-.928-.931L7.568,8.477.193,1.122a.657.657,0,0,1,.928-.93L8.963,8.011a.657.657,0,0,1,0,.93Z"
                                      transform="translate(0)" fill="#fff"></path>
                            </svg>
                        </div>
                        <div class="piece-count">
                            <input type="number" class="basketCount" step="1" name="count" value="1" min="1" max="7">
                        </div>
                        <div class="qty-plus">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="25"
                                 viewBox="0 0 9.156 16.953">
                                <path d="M126.7,8.011,118.864.192a.657.657,0,0,0-.928.931l7.375,7.354-7.375,7.354a.657.657,0,0,0,.928.93L126.7,8.942a.657.657,0,0,0,0-.93Z"
                                      transform="translate(-117.742 0)" fill="#fff"></path>
                            </svg>
                        </div>
                    </div>
                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                            var minusButton = document.querySelector('.qty-minus');
                            var plusButton = document.querySelector('.qty-plus');
                            var countInput = document.querySelector('input[name="count"]');

                            minusButton.addEventListener("click", function () {
                                var currentValue = parseInt(countInput.value);
                                if (currentValue > 1) {
                                    countInput.value = currentValue - 1;
                                }
                            });

                            plusButton.addEventListener("click", function () {
                                var currentValue = parseInt(countInput.value);
                                var maxValue = parseInt(countInput.getAttribute("max"));
                                if (currentValue < maxValue || !maxValue) {
                                    countInput.value = currentValue + 1;
                                }
                            });
                        });
                    </script>

                    <div class="add-product">
                        <button type="submit">Sepete Ekle</button>
                        <i class="fa-solid fa-plus"></i>
                    </div>
                </form>
