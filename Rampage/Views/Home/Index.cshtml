@model HomeVM
<!-- Main Start  -->
<main>
    <section>
        <div class="swiper mySwiper2">
            <div class="swiper-wrapper">
                @foreach (var slider in Model.Sliders)
                {
                    <div class="swiper-slide">
                        <img class="slider-image-index" src="@slider.ImagePath" alt="">
                        <div class="slider-text">
                            <span>@slider.Name</span>
                            <h3>@slider.Subject</h3>
                            <p>
                                @slider.Title
                            </p>
                            @{
                                if (slider.Button is not null)
                                {

                                    <div class="slider-btn">
                                        <a asp-action="Index" asp-controller="Shop">@slider.Button</a>
                                        <i class="fa-solid fa-chevron-right"></i>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <section class="bg-shop">
        <div class="swiper corusel">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <div class="shop-flex">
                        <div class="shop-title">
                            <h2>Kulaklık ve Mikrofon</h2>
                        </div>
                        <div class="shop-image">
                            <span>1</span>
                            <img src="~/assets/image/kulaklikcategories.png" alt="Kulaklik ve Mikrofon">
                        </div>
                        <a href="#">
                            <p>Keşfet</p> <i class="fa-solid fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="shop-flex">
                        <div class="shop-title">
                            <h2>Klavye</h2>
                        </div>
                        <div class="shop-image">
                            <span>2</span>
                            <img src="~/assets/image/categoriesklavye.png" alt="Kulaklik ve Mikrofon">
                        </div>
                        <a href="#">
                            <p>Keşfet</p> <i class="fa-solid fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="shop-flex">
                        <div class="shop-title">
                            <h2>Monitör</h2>
                        </div>
                        <div class="shop-image">
                            <span>3</span>
                            <img src="~/assets/image/categoriesMonitor.png" alt="Kulaklik ve Mikrofon">
                        </div>
                        <a href="#">
                            <p>Keşfet</p> <i class="fa-solid fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="shop-flex">
                        <div class="shop-title">
                            <h2>Mouse</h2>
                        </div>
                        <div class="shop-image">
                            <span>4</span>
                            <img src="~/assets/image/categoriesMouse.png" alt="Kulaklik ve Mikrofon">
                        </div>
                        <a href="#">
                            <p>Keşfet</p> <i class="fa-solid fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="shop-flex">
                        <div class="shop-title">
                            <h2>Kasa</h2>
                        </div>
                        <div class="shop-image">
                            <span>5</span>
                            <img src="~/assets/image/categoriesKasa.png" alt="Kulaklik ve Mikrofon">
                        </div>
                        <a href="#">
                            <p>Keşfet</p> <i class="fa-solid fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="power-slider">
        <div class="power-slider-header">
            <div class="power-slider-title">
                <span>SENİN İÇİN</span>
                <h2>Güç, Güvenlik ve Performans.</h2>
            </div>
            <div class="power-slider-categories">
                <span class="power-slider-categori1">Popüler Ürünler</span>
                <span class="power-slider-categori2">Sizin İçin Seçtiklerimiz</span>
                <span class="power-slider-categori3">Son Eklenenler</span>
            </div>
        </div>
        <div class="power-slider-boxs1 active">
            <div class="power-slider-box1">
                <img src="~/assets/image/for-youMouse.jpg" alt="Mouse">
            </div>
            <div class="power-slider-box2">
                <div class="swiper foryou">
                    <div class="swiper-wrapper">
                        @foreach (var product in Model.PopularProducts)
                        {
                            <div class="swiper-slide">
                                <div class="product-box-swipper">
                                    <div class="product-title">
                                        <span>@product.Name</span>
                                    </div>
                                    <div class="product-image">
                                        <img src="@product.BaseImagePath" alt="">
                                    </div>
                                    <div class="total-rating">
                                        <div class="total-star">
                                            @for (int i = 0; i < @product.Rating; i++)
                                            {
                                                <i class="fa-solid fa-star"></i>

                                            }
                                            @for (int i = 0; i < 5 - product.Rating; i++)
                                            {

                                                <i class="fa-regular fa-star"></i>
                                            }
                                        </div>
                                        <span>@product.Rating</span>
                                        <p>@product.Comments.Count</p>
                                    </div>                                    <div class="product-price">
                                        <span>@product.Price TL</span>
                                    </div>
                                    <div class="product-add-basket">
                                        <div>
                                            <a asp-action="AddToBasket" asp-controller="Shop" asp-route-returnAction="@Context.Request.Path.Value" asp-route-id="@product.Id">Sepete Ekle</a>
                                            <span>+</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="power-slider-boxs2 active">
            <div class="power-slider-box1">
                <img src="~/assets/image/diger_resim4.jpg" alt="Mouse">
            </div>
            <div class="power-slider-box2">
                <div class="swiper foryou">
                    <div class="swiper-wrapper">
                        @foreach (var product in Model.SpecialProducts)
                        {
                            <div class="swiper-slide">
                                <div class="product-box-swipper">
                                    <div class="product-title">
                                        <span>@product.Name</span>
                                    </div>
                                    <div class="product-image">
                                        <img src="@product.BaseImagePath" alt="">
                                    </div>
                                    <div class="total-rating">
                                        <div class="total-star">
                                            @for (int i = 0; i < @product.Rating; i++)
                                            {
                                                <i class="fa-solid fa-star"></i>

                                            }
                                            @for (int i = 0; i < 5 - product.Rating; i++)
                                            {

                                                <i class="fa-regular fa-star"></i>
                                            }
                                        </div>
                                        <span>@product.Rating</span>
                                        <p>@product.Comments.Count</p>
                                    </div>
                                    <div class="product-price">
                                        <span>@product.Price TL</span>
                                    </div>
                                    <div class="product-add-basket">
                                        <div>
                                            <a asp-action="AddToBasket" asp-controller="Shop" asp-route-returnAction="@Context.Request.Path.Value" asp-route-id="@product.Id">Sepete Ekle</a>
                                            <span>+</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>>
        </div>
        <div class="power-slider-boxs3 active">
            <div class="power-slider-box1">
                <img src="~/assets/image/diger_resim5.jpg" alt="Mouse">
            </div>
            <div class="power-slider-box2">
                <div class="swiper foryou">
                    <div class="swiper-wrapper">
                        @foreach (var product in Model.NewProducts)
                        {
                            <div class="swiper-slide">
                                <div class="product-box-swipper">
                                    <div class="product-title">
                                        <span>@product.Name</span>
                                    </div>
                                    <div class="product-image">
                                        <img src="@product.BaseImagePath" alt="">
                                    </div>
                                    <div class="total-rating">
                                        <div class="total-star">
                                            @for (int i = 0; i < @product.Rating; i++)
                                            {
                                                <i class="fa-solid fa-star"></i>

                                            }
                                            @for (int i = 0; i < 5 - product.Rating; i++)
                                            {

                                                <i class="fa-regular fa-star"></i>
                                            }
                                        </div>
                                        <span>@product.Rating</span>
                                        <p>@product.Comments.Count</p>
                                    </div>
                                    <div class="product-price">
                                        <span>@product.Price TL</span>
                                    </div>
                                    <div class="product-add-basket">
                                        <div>
                                            <a asp-action="AddToBasket" asp-controller="Shop" asp-route-returnAction="@Context.Request.Path.Value" asp-route-id="@product.Id">Sepete Ekle</a>
                                            <span>+</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="card-toggle-section">
        <div class="card-toggle-category">
            <span>ÜRÜN VİTRİNİ</span>
            <div class="card-category">
                @for (int i = 0; i < Model.SpecialCategories.Count; i++)
                {
                    <span class="category-menu@(i+1)">@Model.SpecialCategories[i].Name</span>

                }
            </div>
        </div>
        @for (int i = 0; i < Model.SpecialCategories.Count; i++)
        {
            <div class="category-cards@(i+1)">
                @foreach (var product in Model.SpecialCategories[i].Products)
                {
                    <div class="category-card">
                        <h2>@product.Name</h2>
                        <div class="category-image">
                            <img src="@product.BaseImagePath" alt="">
                        </div>
                        <p>@product.Price</p>
                        <div class="category-add-basket">
                            <a asp-action="AddToBasket" asp-controller="Shop" asp-route-returnAction="@Context.Request.Path.Value" asp-route-id="@product.Id">Sepete Ekle</a>
                            <p>+</p>
                        </div>
                    </div>

                }

            </div>
        }
    </section>
    <section class="user-comment">
        <div class="user-comment-title">
            <p>Kullanıcı Deneyimleri</p>
            <span>Kullanıcılarımızdan Yorumlar</span>
        </div>
        <div class="user-comment-boxs">
            <div class="swiper user-comment-slider">
                <div class="swiper-wrapper">
                    @foreach (var comment in Model.Comments)
                    {
                        <div style="max-width:430px" class="swiper-slide">
                            <div class="user-comment-box">
                                <span>
                                    @comment.Product.Name
                                </span>
                                <div class="user-comment-image">
                                    <img src="@comment.Product.BaseImagePath" alt="Kasa">
                                </div>
                                <div class="user-comment-text">
                                    <div class="user-name-date">
                                        <div class="user-name">@comment.AppUser.FullName</div>
                                        <div class="user-date">@comment.CreatedTime.ToString().Substring(0, 10)</div>
                                    </div>
                                    <div class="user-stars">
                                        @for (int i = 0; i < comment.Rating; i++)
                                        {
                                            <i class="fa-solid fa-star"></i>
                                        }
                                    </div>
                                    <p>
                                        @comment.Title
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</main>
<!-- Main End  -->

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="~/assets/js/main.js"></script>

