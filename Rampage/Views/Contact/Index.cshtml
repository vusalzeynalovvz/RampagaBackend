@model Dictionary<string,string>
<!-- Main Start -->
<main>
    <section class="all-map">
        <div id="map"></div>
    </section>

    <section class="all-infos">
        <div class="info">
            <div class="info-item">
                <span>Adres</span>
                <a href="#">@Model["contactAddress"]</a>
            </div>
            <div class="info-item">
                <span>Telefon</span>
                <a href="#">@Model["contactPhone"]</a>
            </div>
            <div class="info-item">
                <span>E-posta</span>
                <a href="#">@Model["contactEmail"]</a>
            </div>
        </div>
    </section>

    <section class="all-contact">
        <div class="contact">
            <div class="contact-left">
                <div class="title">Hızlı <span>Mesaj</span></div>
                <div class="contact-text">
                    <p>
                        Bize Hangi Yolla Ulaşırsanız Ulaşın, Size <span>En Hızlı Şekilde</span>
                        Yanıt Vereceğiz.
                    </p>

                </div>
            </div>
            <form method="post" asp-action="Contact" class="contact-right">
                <div class="inputs">
                    <div class="form-item">
                        <input type="text" name="fullname" placeholder="Adınız Soyadınız">
                    </div>
                    <div class="form-item">
                        <input type="email" name="email" placeholder="E-posta Adresiniz">
                    </div>
                    <div class="form-item">
                        <textarea class="textarea" name="message" id="mesaj" placeholder="Mesajınız"></textarea>
                    </div>
                </div>
                <div class="gizlilik">
                    <p>
                        Kişisel verileriniz, <a href="#">Aydınlatma Metni</a> kapsamında işlenmektedir. 'Gönder'
                        butonuna basarak
                        <a href="#"> Gizlilik ve Çerez Politikası</a> 'nı okuduğunuzu ve kabul ettiğinizi
                        onaylıyorsunuz.
                    </p>
                </div>
                <div class="send-message-contact">
                    <button type="submit">Gönder</button>
                </div>
            </form>

        </div>
    </section>
</main>
<!-- Main End -->

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="~/assets/js/contact.js"></script>
