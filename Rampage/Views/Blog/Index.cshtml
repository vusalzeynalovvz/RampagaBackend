@model BlogVM
<main>
    <section class="title-news-box">
        <div class="title-news-box-container">
            <div class="news-title">
                <span>En Son Neler Yaşandı?</span>
            </div>
            <div class="news-boxs">
                @foreach (var blog in Model.RecentBlogs)
                {
                    <div class="news-box" style="margin-right:10px">
                        <div class="news-category">
                            <span>@blog.BlogCategory.Name</span>
                        </div>
                        <div class="news-text">
                            <h3>@blog.Name</h3>
                        </div>
                        <div class="news-date">
                            <span>Paylaşım Tarihi</span>
                            <div class="date-line"></div>
                            <p>@blog.CreatedTime.ToString().Substring(0,10)</p>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
    <section class="blog-container">
        <div class="blog-share-all">
            <div class="blog-share">
                <div class="blog-share-title">
                    <h3>Önceki Paylaşımlar</h3>
                </div>
                @foreach (var blog in Model.Blogs)
                {
                    <div class="blog-image-text" style="margin-bottom:20px">
                        <div class="blog-image">
                            <a href="#">
                                <img src="@blog.ImagePath" alt="BlogShare">
                            </a>
                        </div>
                        <div class="blog-text">
                            <div class="blog-date">
                                <span>@blog.CreatedTime.ToString().Substring(0,10)</span>
                            </div>
                            <div class="blog-content">
                                <a href="#">
                                    <h3>@blog.Name</h3>
                                </a>
                            </div>
                            <div class="blog-cnt">
                                <p>
                                  @blog.Description
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="blog-categories-all">
                <div class="into-blog-cate">
                    <div class="blog-cate-title">
                        <img src="~/assets/image/news-icon.png" alt="Rampage Logo">
                        <span>Kategoriler</span>
                    </div>

                    <div class="blog-list">
                        <ul>

                            <li>
                                <a asp-action="Index" asp-controller="Blog" asp-route-id="@null">
                                    <span class="news-cont"></span>
                                    <span>Tümü</span>
                                </a>
                            </li>
                            @foreach (var category in Model.BlogCategories)
                            {
                                <li>
                                    <a asp-action="Index" asp-controller="Blog" asp-route-id="@category.Id">
                                        <span class="news-cont">@category.Blogs.Count</span>
                                        <span>@category.Name</span>
                                    </a>
                                </li>

                            }

                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>



<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="~/assets/js/blog.js"></script>

